{% extends 'base.html.twig' %} {% block head %}

<div class="container">
  <div class="row justify-content-center">
    <div class="form-group col-md-4 col-md-offset-5 align-center">
      {{ form_start(form) }}

      <label> Titre du film </label>
      {{ form_row (form.Titre, {'attr': {'class':'form-control-lg','placeholder':'Titre'

      }}) }}

      <label > Description </label>

      {{ form_row (form.Description, {'attr': {'class':'form-control-lg','placeholder':'Description'

      }}) }}

      <label> Categorie </label>
      {{ form_row (form.Categorie, {'attr': {'class':'form-control-lg','placeholder':'Categorie'

      }}) }}

      <label> Image </label>
      {{ form_row (form.Image, {'attr': {'class':'form-control-lg','placeholder':'Image'

      }}) }}

      <button
        class="btn btn-success"
        style="margin-bottom: 20px; margin-top: 20px">
        {{ button_label|default('Ajouter') }}
      </button>

      {{ form_end(form) }}
    </div>
  </div>
</div>

{% endblock %}
